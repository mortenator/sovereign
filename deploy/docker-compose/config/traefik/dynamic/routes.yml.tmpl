# Traefik v3 — Dynamic Routing Configuration (TEMPLATE)
# Sovereign Deploy — EU Sovereign Document Suite
#
# THIS IS A TEMPLATE — do not load directly. setup.sh generates routes.yml
# from this file using envsubst, replacing ${DOMAIN} with the actual domain.
# Traefik's file provider ignores .tmpl files.
#
# ROUTING STRATEGY: All service routers are defined exclusively via Docker labels
# in docker-compose.yml, which reference the shared middleware below using the
# @file provider suffix (e.g. "secure-headers@file"). This avoids duplicate
# routers from two providers competing for the same Host() rule — a condition
# that causes undefined routing behavior in Traefik v3.
#
# This file provides: shared middleware + HTTP→HTTPS catchall redirect only.

# ─────────────────────────────────────────────
# HTTP Configuration
# ─────────────────────────────────────────────
http:

  # ─────────────────────────────────────────────
  # Middlewares — reusable across all routers
  # ─────────────────────────────────────────────
  middlewares:

    # HTTP → HTTPS permanent redirect
    redirect-to-https:
      redirectScheme:
        scheme: https
        permanent: true

    # Security headers — apply to all production services
    secure-headers:
      headers:
        stsSeconds: 31536000
        stsIncludeSubdomains: true
        stsPreload: true
        forceSTSHeader: true
        contentTypeNosniff: true
        browserXssFilter: true
        referrerPolicy: "strict-origin-when-cross-origin"
        permissionsPolicy: "camera=(), microphone=(), geolocation=()"
        customResponseHeaders:
          X-Powered-By: ""
          Server: ""
          X-Frame-Options: "SAMEORIGIN"

    # Rate limiting — general traffic
    rate-limit:
      rateLimit:
        average: 100
        burst: 200
        period: 1s

    # Rate limiting for auth endpoints (stricter)
    auth-rate-limit:
      rateLimit:
        average: 10
        burst: 20
        period: 1s

    # Compress responses (gzip/brotli)
    gzip-compress:
      compress: {}

    # CORS for OnlyOffice document editor iframe
    onlyoffice-cors:
      headers:
        accessControlAllowMethods:
          - "GET"
          - "POST"
          - "PUT"
          - "DELETE"
          - "OPTIONS"
        accessControlAllowOriginList:
          - "https://${DOMAIN}"
        accessControlAllowHeaders:
          - "Authorization"
          - "Content-Type"
        accessControlMaxAge: 3600
        addVaryHeader: true

    # Required forwarded proto header for OnlyOffice WebSocket
    onlyoffice-forwarded-proto:
      headers:
        customRequestHeaders:
          X-Forwarded-Proto: "https"

  # ─────────────────────────────────────────────
  # Routers — HTTP→HTTPS catchall only.
  # Service-specific routers live in docker-compose.yml labels and reference
  # the middleware above via the @file provider suffix.
  # ─────────────────────────────────────────────
  routers:

    # Catch-all: redirect bare HTTP to HTTPS
    http-catchall:
      rule: "HostRegexp(`.+`)"
      entryPoints:
        - web
      middlewares:
        - redirect-to-https
      service: noop
      priority: 1

  # ─────────────────────────────────────────────
  # Services
  # ─────────────────────────────────────────────
  services:

    noop:
      loadBalancer:
        servers: []

# ─────────────────────────────────────────────
# TLS Configuration
# ─────────────────────────────────────────────
tls:
  options:
    default:
      minVersion: VersionTLS12
      cipherSuites:
        - TLS_ECDHE_ECDSA_WITH_AES_256_GCM_SHA384
        - TLS_ECDHE_RSA_WITH_AES_256_GCM_SHA384
        - TLS_ECDHE_ECDSA_WITH_CHACHA20_POLY1305
        - TLS_ECDHE_RSA_WITH_CHACHA20_POLY1305
        - TLS_ECDHE_ECDSA_WITH_AES_128_GCM_SHA256
        - TLS_ECDHE_RSA_WITH_AES_128_GCM_SHA256
      sniStrict: true
